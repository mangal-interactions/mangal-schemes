{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Dataset",
  "description": "Describes a dataset, and gives bibliographic informations",
  "type": "object",
  "properties": {
    "id": {
      "description": "Access code for the dataset in the local database",
      "type": "string"
    },
    "name": {
    	"description": "Name of the dataset",
      "type": "string"
    },
    "description": {
       "description": "Some additional informations about the dataset",
       "type": "string"
    },
    "papers": {
       "description": "DOIs for original publications",
       "type": "array",
       "items": {
          "type": "string"
       }
    },
    "data": {
       "description": "DOI for the datasets",
       "type": "array",
       "items": {
          "type": "string"
       }
    },
    "networks": {
       "description": "List of networks ID",
       "type": "array",
       "items": {
          "type": "string"
       },
       "uniqueItems": true
    }
  },
  "required": ["name", "networks"]
}
